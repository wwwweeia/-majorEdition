/*列表统一样式 */

.list-item {
  position: relative;
}

.list-item::after {
  content: '';
  position: absolute;
  border-bottom: 1rpx solid #eaeef1;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  bottom: 0;
  right: 0;
  left: 30rpx;
}

.last::after {
  border-bottom: 0 !important;
}


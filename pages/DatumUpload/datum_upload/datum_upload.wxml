<!-- 备注 -->
<view class="cu-bar solid-bottom">
  <view class="action">
    <text class="cuIcon-title text-blue "></text> 备注
  </view>

</view>


<!-- 编辑框 -->
<view class="cu-form-group">
  <textarea value="{{desc}}" maxlength="-1" bindinput="textareaAInput" placeholder="此处填写备注"></textarea>
</view>

<view class="padding-xl_user">
  <button class="cu-btn  block bg-blue margin-tb-sm lg" bindtap="submit">提交</button>
</view>
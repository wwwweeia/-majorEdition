  <!-- 导航栏-->
  <scroll-view scroll-x class="bg-white nav" scroll-with-animation scroll-left="{{scrollLeft}}">
    <view class="cu-item {{null==TabCur?'text-green cur':''}}" bindtap="tabSelect">
      全部
    </view>
    <view class="cu-item {{item.id==TabCur?'text-green cur':''}}" wx:for="{{problemType}}" wx:key bindtap="tabSelect" data-id="{{item.id}}">
      {{item.name}}
    </view>
  </scroll-view>

  <!-- 任务列表 -->
  <view class=" solid ">
    <navigator class="item-other bg-white padding radius text-left shadow-blur" url="../detailPage/detailPage?id={{item.taskId}}" wx:for="{{taskList}}" wx:key="{{index}}">
      <view class="other-img-wrap ">
        <image src="{{item.imageUrl}}" mode="scaleToFill" class="taskListHeight"></image>
      </view> 
      <view class="other-info">
          <view class="padding-xs flex align-center">
        <view class="flex-sub text-center">
          <view class="solid-bottom text-lg padding">
            <text class="text-black box">{{item.describe}}</text>
          </view>
          <view class="solid-bottom">
          <view class="padding box text-df">{{item.findTime}}</view>
          </view>
          <view class="padding box text-df">{{item.addr}}</view>
        </view>
      </view>
      </view>
    </navigator>
  </view>
</view>
<view class="imagesize {{isNull=='true'?'show':'hide'}}">
  <image src='/images/null.png' mode='scaleToFill' style='height:100%;width:100%' ></image>
</view>

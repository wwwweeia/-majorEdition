<!-- square-dot（杠） round-dot(点)   -->
<!-- 轮播图-->
<swiper class="screen-swiper square-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
  <navigator class="" url="../swiper/swiper?id={{item.id}}" wx:for="{{swiperList}}" wx:key open-type="navigate">
    <swiper-item>

      <image src="{{item.imageUrl}}" mode="aspectFill"></image>

    </swiper-item>
  </navigator>
</swiper>
<!-- 导航栏-->
<scroll-view scroll-x class="bg-white nav" scroll-with-animation scroll-left="{{scrollLeft}}">
  <view class="cu-item {{null==TabCur?'text-green cur':''}}" bindtap="tabSelect">
    全部
  </view>
  <view class="cu-item {{item.id==TabCur?'text-green cur':''}}" wx:for="{{problemType}}" wx:key bindtap="tabSelect" data-id="{{item.id}}">
    {{item.name}}
  </view>
</scroll-view>

<!-- 任务列表 -->
<view class="other-list">
  <navigator class="item-other" wx:for="{{taskList}}" wx:key="{{index}}">
    <view class="other-img-wrap">
      <image src="{{item.imageUrl}}" mode="widthFix"></image>
    </view>
    <view class="other-info">
      <view class="other-title">{{item.describe}}</view>
      <view class="other-detail">
        <view>
          <text class="play-count">{{item.findTime}}--这是时间</text>
        </view>
        <view>
          <text class="comment-count">{{item.addr}}--这是地址</text>
        </view>
      </view>
    </view>
  </navigator>
</view>
page {
  height: 30%;
}

.padding {
  padding: 15rpx;
}

.hide {
  display: none;
}

.show {
  /*display: block*/
}

.box {
  width: 120rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.container {
  width: 100%;
  height: 600rpx;
}

#maps {
  width: 100%;
  height: 600rpx;
}

.cover-image {
  height: 60rpx;
  width: 60rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -30rpx;
}

.footer-box {
  width: 100%;
  position: fixed;
  top: 0;
  padding: 30rpx;
  box-sizing: border-box;
}

.result-box {
  width: 100%;
  padding: 12rpx 30rpx;
  box-sizing: border-box;
  color: #555;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.94);
  border-radius: 14rpx;
}

.list-item::after {
  left: 0;
}

.badge {
  height: 16rpx;
  width: 16rpx;
  border-radius: 8rpx;
  background: #5677fc;
  margin-right: 20rpx;
}

.orange {
  background: #ff7900 !important;
}

.info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.ellipsis {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.current-location {
  position: fixed;
  height: 76rpx;
  width: 76rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 950rpx;
  right: 60rpx;
  background: rgba(255, 255, 255, 0.94);
  border-radius: 38rpx;
}

.current-img {
  width: 42rpx;
  height: 42rpx;
  top: 20%;
  left: 50%;
}

.padding {
  padding: 15rpx;
}

.image_user {
  width: 100%;
  height: 600rpx;
  flex-direction: column;
}

.padding-xl_user {
  padding: 50rpx 150rpx;
}

.radioChange_user {
  text-align: center;
  padding-top: 25rpx;
}

/*录音*/

.image-audio {
  width: 300rpx;
  height: 250rpx;
  /*margin: 10rpx 20rpx 0rpx 0rpx;*//*float: left;*/
  margin-left: auto;
  margin-right: auto;
  display: block;
}
.image-audio-user {
  width: 40rpx;
  height: 60rpx;
  /*margin: 10rpx 20rpx 0rpx 0rpx;*//*float: left;*/
  margin-left: auto;
  margin-right: auto;
  display: block;
}

/*评分那个点*/

.text-user {
  font-size: 36rpx;
  margin-left: -0.3em;
  margin-right: 0.3em;
}

/* grid布局 */

.grid {
  display: inline;
  flex-wrap: wrap;
}

.user-view {
  position: absolute;
  right: ;
  top: 0;
  border-bottom-left-radius: 6rpx;
  padding: 6rpx 12rpx;
  height: auto;
  background-color: rgba(0, 0, 0, 0.5);
}

/*针对图片*/

.cu-tag-user {
  font-size: 24rpx;
  vertical-align: middle;
  position: absolute;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0rpx 16rpx;
  height: 48rpx;
  font-family: Helvetica Neue, Helvetica, sans-serif;
  white-space: nowrap;
  background-color: rgba(0, 0, 0, 0.5);
}

.video-user {
  width: 240rpx;
  display: inline-block;
  line-height: 0;
  overflow: hidden;
  position: relative;
  z-index: 0;
  height: 6.4em;
  margin-right: 20rpx;
}

.action-user {
  padding: 0 50rpx;
  display: flex;
  align-items: center;
}

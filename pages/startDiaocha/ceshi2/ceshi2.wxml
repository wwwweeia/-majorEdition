
<view class="cu-bar solid-bottom">
  <view class="action">
    <text class="cuIcon-title text-blue "></text> 录音
  </view>
  <view class="action">
    <button class="cu-btn bg-green shadow" bindtap="start">点击录音</button>
  </view>
</view>

<modal  hidden="{{modalHidden}}" bindconfirm="sub" bindcancel="cancel">
     
<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">

      <view class="picker text-blue" >
        {{index?picker[index]:'请选择对应操作'}}
      </view>
    </picker>
</modal>




<view class='container'>
  <button class='button' bindtap='startRecord' type='primary'>点击录音</button>
  <modal  title="最长录制60秒" hidden="{{modalHidden}}" bindconfirm="stopRecord" bindcancel="modalCandel">
    <view>
      <image class="image1" src="../../../images/audio.gif" mode='aspectFill'></image>
    </view>
  </modal>
</view>

<view wx:if="{{isShow==0}}">
  <button bindtap='playRecord' type='primary'>播放录音</button>
</view>